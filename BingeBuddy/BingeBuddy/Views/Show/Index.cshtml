@model IEnumerable<BingeBuddy.Models.Show>

@{
    ViewData["Title"] = "Index";
}

<h2>All Shows</h2>

<p style="display: inline">
    <a asp-action="Create">Add New Show</a>
    @if (User.IsInRole("True"))
    {
        <nobr>|| <a asp-action="ApprovedShowsIndex">See Approved Shows</a> || <a asp-action="UnapprovedShowsIndex">See Unapproved Shows</a></nobr>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoverImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cancelled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img style="width: 100px" src="@item.CoverImage" alt="Cover Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cancelled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
                @if (User.IsInRole("True"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
